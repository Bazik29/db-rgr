<% layout('layout/page') -%>

<% block('title', 'База турагентов'); -%>

<form action="/add_agent" method="post">

<table>
	<caption>Добавление турагента в базу данных</caption>
	<tr><td>Фамилия:</td><td><input type="text" name="name1" required></td></tr>
	<tr><td>Имя:</td><td><input type="text" name="name2" required></td></tr>
	<tr><td>Отчество:</td><td><input type="text" name="name3"></td></tr>
	<tr><td>Телефоны</td><td><input type="text" name="phone" required></td></tr>
</table>
<p><button type="submit">Добавить турагента</button></p>

</form>
<br>
<table border="1">
	<caption>Список турагентов</caption>
	<tr><th>Фамилия</th><th>Имя</th><th>Отчество</th><th>Телефоны</th></tr>
	<% for(var i=0; i<rows.length; i++) {%>
	<tr><td><%=rows[i].name1 %></td><td><%=rows[i].name2 %></td><td><%=rows[i].name3 %></td><td><%=rows[i].phone %></td></tr>
	<% } %>
</table>
