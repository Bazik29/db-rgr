<% layout('layout/page') -%>


<form action="/search_agent_go" method="post">
<table>
	<caption>Поиск всех сведений о агенте</caption>
	<tr><td>Фамилия:</td><td><input type="text" name="name1" required></td></tr>
	<tr><td>Имя:</td><td><input type="text" name="name2" required></td></tr>
	<tr><td>Отчество:</td><td><input type="text" name="name3"></td></tr>
</table>
<p><button type="submit">Поиск</button></p>
</form>
<% if (agent[0]!==undefined && phone!==undefined) {%>
<p>Агент: <%=agent[0]%> <%=agent[1]%> <%=agent[2]%></p>
<p>Телефоны: <%=phone.phone%></p>
<% }%>
<% if (rows.length) {%>
<table class="data">
	<caption>Клиенты</caption>
	<tr><th>Фамилия</th><th>Имя</th><th>Отчество</th></tr>
	<% for(var i=0; i<rows.length; i++) {%>
	<tr><td><%=rows[i].first_name %></td><td><%=rows[i].second_name %></td><td><%=rows[i].last_name %></td></tr>
	<% } %>
</table>
<%}%>
